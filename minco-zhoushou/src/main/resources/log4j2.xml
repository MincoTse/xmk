<?xml version="1.0" encoding="UTF-8"?>
<!--
    monitorInterval : Log4j能够自动检测修改配置文件和重新配置本身, 设置间隔秒数。
-->
<Configuration>
    <properties>
        <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%t] %-5level %c{36} - %msg%n" charset="UTF-8"/>
        <property name="FILE_PATH" value="更换为你的日志路径"/>
    </properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile name="RollingFile" immediateFlush="true"
                     fileName="/logs/minco-zhoshou/minco-zhoshou.log"
                     filePattern="/logs/minco-zhoshou/minco-zhoshou-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
                <SizeBasedTriggeringPolicy size="400MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.minco.zhushou" level="debug"></Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>

    </Loggers>
</Configuration>